<?xml version="1.0" encoding="UTF-8"?>

<configuration>
    <shutdownHook class="ch.qos.logback.core.hook.DelayingShutdownHook"/>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%date] %highlight(%-5level) %message \(%logger:%thread\)%n</pattern>
        </encoder>
    </appender>
    <appender name="async" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="stdout" />
        <queueSize>1024</queueSize>
    </appender>

    <!-- Change to DEBUG for debugging test failures -->
    <logger name="mesosphere.marathon" level="DEBUG"/>
    <logger name="mesosphere.marathon.integration.process" level="DEBUG"/>
    <logger name="akka" level="INFO"/>
    <logger name="native-zk-connector" level="WARN" />
    <logger name="org.eclipse" level="INFO"/>
    <logger name="org.apache.zookeeper" level="WARN" />

    <root level="DEBUG">
        <appender-ref ref="async"/>
    </root>
</configuration>
